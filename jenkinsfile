pipeline {
    agent any

    environment {
        // Define Azure credentials using Jenkins Credentials Plugin
        AZURE_CLIENT_ID       = credentials('ARM_CLIENT_ID')
        AZURE_TENANT_ID       = credentials('ARM_TENANT_ID')
        AZURE_CLIENT_SECRET   = credentials('ARM_CLIENT_SECRET')
        AZURE_SUBSCRIPTION_ID = credentials('ARM_SUBSCRIPTION_ID')
    }

    stages {
        stage('Init') {
            steps {
                checkout scm
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Define the Azure resource group and app name
                    def resourceGroup = 'RG-uyi'
                    
                }

                // Use 'bat' instead of 'sh' for Windows batch commands
                withCredentials([usernamePassword(credentialsId: 'AzureServicePrincipal_5', passwordVariable: 'AZURE_CLIENT_SECRET', usernameVariable: 'AZURE_CLIENT_ID')]) {
                    bat '''
                        az login --service-principal -u %AZURE_CLIENT_ID% -p %AZURE_CLIENT_SECRET% -t %AZURE_TENANT_ID%
                        az account set -s %AZURE_SUBSCRIPTION_ID%

                        az group create --name ${RG-uyi} --location 'eastus2'

                    '''
                }
            }
        }
    }
}










